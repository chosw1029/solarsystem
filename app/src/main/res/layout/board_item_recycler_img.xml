<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="nextus.solarsystem.viewmodel.BoardItemViewModel"/>
    </data>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/placeCard"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="@dimen/cardview_default_elevation">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/board_img"
                android:src="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                />
            <LinearLayout
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textColor="#000000"
                    android:id="@+id/board_title"
                    android:text="@{viewModel.boardTitle}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp">
                    <TextView
                        android:id="@+id/view_count"
                        android:gravity="center"
                        android:textSize="8dp"
                        android:textColor="@color/colorAccent"
                        android:text="@{viewModel.viewCount}"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <View
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="#424242"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/comment_count"
                        android:gravity="center"
                        android:textSize="8dp"
                        android:text="@{viewModel.commentCount}"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <View
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="#424242"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/like_count"
                        android:gravity="center"
                        android:textSize="8dp"
                        android:text="@{viewModel.likeCount}"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:background="#E0E0E0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/user_icon"
                    android:src="@null"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/user_id"
                        android:text="@{viewModel.userName}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/date"
                        android:textSize="10dp"
                        android:text="@{viewModel.date}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>
